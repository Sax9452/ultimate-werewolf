{
  "name": "werewolf-server",
  "version": "1.0.0",
  "description": "Backend server for Werewolf Online",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:mechanics": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/gameMechanics.test.js",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration.test.js",
    "test:performance": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/performance.test.js"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.0",
    "nanoid": "^5.0.4",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "vitest": "^4.0.5"
  }
}
